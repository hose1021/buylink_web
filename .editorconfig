# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{js,jsx,ts,tsx,css,scss,html,json,md}]
indent_style = tab
indent_size = 4

# Match files with trailing whitespace
trim_trailing_whitespace = true

# Set default charset
charset = utf-8

# 4 space indentation for YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# Override for Makefiles
[Makefile]
indent_style = tab

# Ignore binary files
[*.{png,jpg,jpeg,gif,svg}]
indent_style = unset
